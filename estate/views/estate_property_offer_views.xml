<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Estate Property Offers" editable="top" decoration-success="state == 'accepted'"
                  decoration-danger="state == 'refused'">
                <field name="price" string="Price"/>
                <field name="partner_id" string="Partner"/>
                <field name="validity" string="Validity (days)"/>
                <field name="date_deadline" string="Deadline"/>
                <button name="action_accept" type="object" title="Accept" icon="fa-check" invisible="state in ['accepted', 'refused']"/>
                <button name="action_refuse" type="object" title="Refuse" icon="fa-close" invisible="state in ['accepted', 'refused']"/>
                <field name="state" string="" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" string="Price"/>
                        <field name="partner_id" string="Partner"/>
                        <field name="validity" string="Validity (days)"/>
                        <field name="date_deadline" string="Deadline"/>
                        <field name="state" string="Status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>